<article class="comment" id="comment-<%= comment.id %>">
    <p class="meta">
        From <%= link_to comment.user.username, "#{posts_path}/user/#{comment.user.id}", :title=> "View #{comment.user.username}'s profile" %> on <%= comment.updated_at.to_s(:article) %>
    	<% if current_user and comment.user.id == current_user.id %>
    	    <span class="control"><%= link_to 'Delete', comment, :confirm => 'Are you sure you want to delete this comment?', :method => :delete, :class => 'icon delete', :title => 'Delete' %></span>
    		<span class="control"><%= link_to "Edit", edit_comment_path(comment.id), :class => "icon edit", :title => 'Edit' %></span>
    	<% end %>
    </p>
   	<% @content = simple_format(html_escape(comment.comment)) %>
		<%= auto_link(@content) %>
</article>