<% if ((current_user.id == @post.users_id && !@post.owner_id.nil?) or current_user.id == @post.owner_id) && @post.owner_id != @post.users_id %>
    <section id="comments">
    <% @comment = @new_comment %>
    <%= render :partial => 'comments/form' %>
    <% 
        @post.comments.each do |comment| 
    %>
    <%= render :partial => 'comments/comment', :locals => { :comment => comment } %>
    <% end %>
    </section>
<% end %>
<% end %>