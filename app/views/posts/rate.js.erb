$('#idea-<%= params[:id] %>').attr('data-rating',<%= @post.total_rating %>);

$('#idea-<%= params[:id] %> .score span').fadeOut('fast',function() {
	$('#idea-<%= params[:id] %> .score span').html(<%= @post.total_rating %>)
	$('#idea-<%= params[:id] %> .score span').fadeIn('fast')
});

<% if @post.total_rating <= 0 %>
$('#idea-<%= params[:id] %>').removeClass('rated');
<% else %>
$('#idea-<%= params[:id] %>').addClass('rated');
<% end %>

<% if params[:rating] == '0' %>
	$('#idea-<%= params[:id] %> .rating li').removeClass('active');
	$('#idea-<%= params[:id] %> .rating li[data-rate="0"]').addClass('active');
<% else %>
	$('#idea-<%= params[:id] %> .rating li').removeClass('active');
	$('#idea-<%= params[:id] %> .rating li[data-rate="1"]').addClass('active');
<% end %>